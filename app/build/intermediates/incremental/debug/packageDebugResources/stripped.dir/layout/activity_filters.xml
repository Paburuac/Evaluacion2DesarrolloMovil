<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackBg">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Filtros de campañas"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Ciudad -->
        <TextView
            android:text="Ciudad"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ej: Viña del Mar"
            android:background="@drawable/bg_input"
            android:padding="12dp"
            android:inputType="textCapWords"
            android:layout_marginBottom="12dp"/>

        <!-- Checkboxes -->
        <CheckBox
            android:id="@+id/cbPresencial"
            android:text="Solo presenciales"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cbDiscord"
            android:text="Solo vía Discord"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Tamaño -->
        <TextView
            android:id="@+id/tvSize"
            android:text="Tamaño máximo: 0 jugadores"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/sbSize"
            android:max="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Distancia -->
        <TextView
            android:id="@+id/tvDistance"
            android:text="Distancia máxima: 0 km"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <SeekBar
            android:id="@+id/sbDistance"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Botones -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnApply"
                android:text="Aplicar filtros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnClear"
                android:text="Limpiar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
